@model finalaspphone.Models.Telefono

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recarga @Model.nroTelefono</h2>

<div class="row">
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <form action="@Url.Content("~/Telefono/Recargacion")" method="post">
        <input type="hidden" name="telefono" value="@Model.codTelefono" />
        <div class="form-group col">
            <label>saldo </label><br />
            <input type="number" class="form-control" name="saldo" required />
        </div>
        <div class="form-group">
            <input type="submit" value="Recargar" class="btn btn-success" />
            <a href="~/Login/Index" class="btn btn-danger">Cancelar</a>
        </div>
    </form>
</div>

